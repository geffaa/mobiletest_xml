<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.suitmedia_mobiletest_xml">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuitmediaMobiletestXml">
        <activity
            android:name=".presentation.ui.ThirdScreen"
            android:exported="false" />
        <!-- FirstScreen declaration with android:exported -->
        <activity
            android:name=".presentation.ui.FirstScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- SecondScreen declaration -->
        <activity android:name=".presentation.ui.SecondScreen" />
    </application>

</manifest>